@page
@{
    ViewData["Title"] = "Create Product";
}
<div class="row mb-4">
    <h2 class="col-md">Create Product</h2>
</div>
<form id="formProduct">
    <div class="row mb-3">
        <div class="col-md-6">
            <label for="productName" class="form-label">Product Name</label>
            <input type="text" class="form-control" id="productName" required>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label" for="selectCategory">Category</label>
            <select id="selectCategory" class="form-select" required>
                <option selected>Open this select menu</option>
            </select>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <label for="unitInStock" class="form-label">Unit In Stock</label>
            <input type="number" class="form-control" id="unitInStock" min="0" required>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <label for="unitPrice" class="form-label">Unit Price</label>
            <input type="number" class="form-control" id="unitPrice" min="0" required>
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Create</button>
</form>